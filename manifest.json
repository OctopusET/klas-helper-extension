{
  "name": "KLAS Helper",
  "manifest_version": 2,
  "version": "1.2.0.0",
  "description": "광운대학교 KLAS Helper 확장 프로그램",
  "homepage_url": "https://github.com/klas-helper/klas-helper-extension",
  "permissions": [
    "*://klas.kw.ac.kr/*",
    "*://kwcommons.kw.ac.kr/*",
    "storage"
	],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "./assets/icon_16x16.png",
      "32": "./assets/icon_32x32.png",
      "48": "./assets/icon_48x48.png",
      "128": "./assets/icon_128x128.png"
    }
  },
  "icons": {
    "16": "./assets/icon_16x16.png",
    "32": "./assets/icon_32x32.png",
    "48": "./assets/icon_48x48.png",
    "128": "./assets/icon_128x128.png"
  },
  "content_scripts": [{
    "matches": ["https://klas.kw.ac.kr/*"],
    "js": ["content.js"],
    "run_at": "document_end"
  }, {
    "matches": ["https://klas.kw.ac.kr/*"],
    "js": ["styling.js"],
    "run_at": "document_start"
  }, {
    "matches": ["https://kwcommons.kw.ac.kr/*"],
    "js": ["content-video.js"],
    "all_frames": true,
    "run_at": "document_end"
  }],
  "web_accessible_resources": [
    "core/internal.js",
    "core/internal-video.js",
    "core/main-ext.js",
    "assets/jszip.min.js",
    "assets/FileSaver.js",
    "dark.css"
  ],
  "background": {
      "scripts": ["background.js"],
      "persistent": false
  },
  "browser_specific_settings": {
    "gecko": {
      "update_url": "https://raw.githubusercontent.com/klas-helper/klas-helper-extension/main/update/manifest.json"
    }
  }
}
